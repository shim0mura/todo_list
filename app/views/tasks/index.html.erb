<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<div>
  <%= link_to "add task", tasks_add_path %>
</div>

<ul id="arranged_tasks">
  <% @tasks.each do |task| %>
    <li id="task-<%= task.id %>" class="task">
      <%= task.name %><br>
      <div>
      <%= simple_format(task.detail) %>
      </div>
      <div>
        見積り:<%= task.estimate %>
      </div>
      <% if task.current %>
      current task
      <% end %>
      <input type="button" class="finish_task" id="finish-task-<%= task.id %>" value="finish">
    </li>
  <% end %>
</ul>
